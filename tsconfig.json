{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "ES2019",
      "ES2020"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "typings/package-json.d.ts",
    "typings/generics.d.ts",
    "typings/rollup-plugin-uglify.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}